# SMART Pump API Environment Configuration

# Application Environment
NODE_ENV=development
PORT=3001

# JWT Secrets (MUST be at least 32 characters in production)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secure_jwt_secret_here_at_least_32_characters_long_12345678
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_here_different_from_above_87654321

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# Database Configuration
DB_PATH=./data/db.json

# Security Settings (Production)
# HTTPS_ONLY=true
# SECURE_COOKIES=true
# TRUST_PROXY=true

# Logging (Production)
# LOG_LEVEL=info
# LOG_FILE=./logs/app.log

# Rate Limiting
# AUTH_RATE_LIMIT_MAX=5
# API_RATE_LIMIT_MAX=100
# RATE_LIMIT_WINDOW_MS=900000

# CORS Settings
# CORS_ORIGIN=https://yourdomain.com
# CORS_CREDENTIALS=true

# Database Backup (Production)
# DB_BACKUP_ENABLED=true
# DB_BACKUP_INTERVAL=86400000
# DB_BACKUP_RETENTION_DAYS=7