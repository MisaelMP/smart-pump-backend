{
	"name": "smart-pump-api",
	"version": "1.0.0",
	"description": "SMART Pump User Management API",
	"type": "module",
	"main": "dist/server.js",
	"scripts": {
		"build": "tsc && tsc-alias",
		"start": "node dist/server.js",
		"dev": "tsx watch src/server.ts",
		"test": "jest",
		"lint": "eslint 'src/**/*.ts'",
		"lint:fix": "eslint 'src/**/*.ts' --fix",
		"format": "prettier --write 'src/**/*.{ts,js,json}'",
		"format:check": "prettier --check 'src/**/*.{ts,js,json}'",
		"precommit": "npm run format && npm run type-check",
		"type-check": "tsc --noEmit"
	},
	"dependencies": {
		"@types/swagger-jsdoc": "^6.0.4",
		"@types/swagger-ui-express": "^4.1.8",
		"bcrypt": "^5.1.1",
		"cookie-parser": "^1.4.7",
		"cors": "^2.8.5",
		"dotenv": "^16.6.1",
		"express": "^5.0.1",
		"express-rate-limit": "^7.4.1",
		"express-validator": "^7.2.0",
		"helmet": "^8.0.0",
		"jsonwebtoken": "^9.0.2",
		"lowdb": "^7.0.1",
		"swagger-jsdoc": "^6.2.8",
		"swagger-ui-express": "^5.0.1",
		"tsc-alias": "^1.8.16",
		"typescript": "^5.8.2",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@types/bcrypt": "^5.0.2",
		"@types/cookie-parser": "^1.4.7",
		"@types/cors": "^2.8.17",
		"@types/express": "^5.0.1",
		"@types/jest": "^29.5.14",
		"@types/jsonwebtoken": "^9.0.7",
		"@types/node": "^22.13.11",
		"@typescript-eslint/eslint-plugin": "^8.17.0",
		"@typescript-eslint/parser": "^8.17.0",
		"eslint": "^9.22.0",
		"jest": "^29.7.0",
		"prettier": "^3.6.2",
		"tsx": "^4.19.2"
	},
	"engines": {
		"node": ">=18.0.0"
	}
}
